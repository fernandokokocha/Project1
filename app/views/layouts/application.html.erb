<!DOCTYPE html>
<html>
<head>
  <title>Vox populi, vox dei</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="header">
  <div id="logo-header">
    <%= link_to 'Vox populi', announcements_path%>
  </div>
  <div id="login-header">
    <% if user_signed_in? %>
      Logged as <%= current_user.email %>
      <% if current_user.admin? %>
        <%= link_to 'Admin panel', admin_path%>
      <% end %>
    <% end %>
  </div>
</div>
<div id="topmenu">
  <% if user_signed_in? %>
    <%= link_to 'Logout', destroy_user_session_path, :method => :delete %>
  <% else %>
    <%= link_to 'Login', new_user_session_path %>
  <% end %>

</div>
<div id="content">
  <% if flash[:alert] %>
    <h3>Alert: <%= flash[:alert] %></h3>
  <% end %>

  <%= yield %>
</div>
</body>
</html>
